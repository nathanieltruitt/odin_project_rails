<%= form_with(model: post, url: '/posts') do |form| %>
  <% if post.errors.any? %>
    <div class="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being created</h2>

      <ul>
        <% post.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: 'display: block' %>
